<div class="row">
    <div class="col-10 mx-auto my-5">    
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#save">
            Crear nuevo ciudadano
        </button>
    </div>

    {{!-- Create Modal --}}
    <div class="modal fade" id="save" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Crear Nuevo Ciudadano</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="id">
                            <label for="id" name="id" class="col-form-label">Documento de Identidad:</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="firstname">
                            <label for="firstname" name="firstname" class="col-form-label">Nombre:</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="lastname">
                            <label for="lastname" name="lastname" class="col-form-label">Apellido:</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="email">
                            <label for="email" name="email" class="col-form-label">Email:</label>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <form method="POST" action="/admin/createCitzen">
                        <button type="button" class="btn btn-primary">Guardar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{!-- Create Modal --}}

    <!-- Delete Modal -->
    <div class="modal fade" id="delete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Eliminar ciudadano</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="">¿Seguro de que desea eliminar este ciudadano?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form method="POST" action="/admin/deleteCitizen">
                        <button type="button" class="btn btn-danger">Eliminar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Delete Modal -->

    <!-- Status Modal -->
    <div class="modal fade" id="delete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Eliminar ciudadano</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="">¿Seguro de que desea eliminar este ciudadano?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form method="POST" action="/admin/changeStatusCitizen">
                            {{#if citizen.status}}
                                <button type="button" class="btn btn-danger">
                                    Desactivar
                                </button>
                            {{else}}
                                <button type="button" class="btn btn-primary">
                                    Activar
                                </button>
                            {{/if}}
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Status Modal -->

    {{#if hasCitizen}}
    <section class="col-8 mx-auto">
        <table class="table table-responsive table-striped text-white">
            <thead class="bg-success">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Email</th>
                    <th scope="col">Status</th>
                    <th scope="col" class="text-center">Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each citizen}}
                <tr>
                    <td class="fs-5">{{citizen.id}}</td>
                    <td class="fs-5">{{citizen.firstname}}</td>
                    <td class="fs-5">{{citizen.lastname}}</td>
                    <td class="fs-5">{{citizen.email}}</td>

                    {{#if citizen.status}}
                        <td class="fs-5">
                            <button class="btn btn-danger">Desactivar</button>
                        </td>

                        {{else}}

                        <td class="fs-5">
                            <button class="btn btn-success">Activar</button>
                        </td>

                    {{/if}}

                    <td class="d-flex gap-2">
                        <button type="button" class="btn btn-secondary w-100" data-bs-toggle="modal" data-bs-target="#save">
                            Editar
                        </button>
                        <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#delete">
                            Eliminar
                        </button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </section>

    {{else}}
    <section class="col-6 bg-danger rounded-3 text-white text-center mx-auto p-4 mt-5">
        <h3 class="display-8 fw-normal text-uppercase fw-bolder m-0"> No hay registros de ciudadanos </h3>
    </section>

    {{/if}}
</div>