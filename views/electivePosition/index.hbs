<div class="row">
    <div class="col-12 mx-auto my-5">    
        <button type="button" class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#save">
            Crear nuevo puesto electivo
        </button>
    </div>

    {{#if hasError}}
        <div class="col-6 mx-auto my-5">
            <div class="alert alert-danger text-center" role="alert">
                <strong>Error:</strong> {{errorMessage}}                
                <a href="/admin/electivePositions" class="btn btn-sm btn-primary">ver puestos electivos</a>
            </div>
        </div>
    {{/if}}

    {{!-- Create Modal --}}
    <div class="modal fade" id="save" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">
                        Crear Nuevo Puesto Electivo</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="POST" action="/admin/createElectivePosition">
                    <div class="modal-body">
                        <section>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="name" name="name"
                                    placeholder="name">
                                <label for="name" class="col-form-label">Nombre del Puesto</label>
                            </div>
                            <div class="form-group d-flex flex-column gap-2">
                                <label for="Description">Descripción</label>
                                <textarea class="form-control" name="description" rows="5" placeholder="..."
                                    id="Description"></textarea>
                            </div>
                        </section>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    {{!-- Create Modal --}}
    

    {{#if hasElectivePositions}}

        {{#each electivePositions as |electivePosition|}}
    
        <section class="col-sm-3 my-2 mx-auto">
            <div class="card border-0 text-white shadow">
                <section class="card-header bg-primary w-100 d-flex justify-content-center fw-bold text-uppercase">
                    {{electivePosition.name}}
                </section>
                <section class="card-body">
                    <div class="accordion accordion-flush" id="accordionFlushExample">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="flush-headingOne">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#desc-{{electivePosition.id}}" aria-expanded="false"
                                    aria-controls="flush-collapseOne">
                                    Descripción
                                </button>
                            </h2>
                            <div id="desc-{{electivePosition.id}}" class="accordion-collapse collapse"
                                aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                                <div class="accordion-body">{{electivePosition.description}}</div>
                            </div>
                        </div>
                    </div>
                </section>
                <section class="card-footer d-flex flex-column gap-2 p-2">
                    <div class="d-flex gap-2">
                        <section class="w-100">
                            {{#if electivePosition.status}}
                            <button class="btn btn-danger w-100" data-bs-toggle="modal"
                                data-bs-target="#status-{{electivePosition.id}}">Desactivar</button>
                            {{else}}
                            <button class="btn btn-success w-100" data-bs-toggle="modal"
                                data-bs-target="#status-{{electivePosition.id}}">Activar</button>
                            {{/if}}
                        </section>
                        <section class="w-100">
                            <button type="button" class="btn btn-secondary w-100" data-bs-toggle="modal" data-bs-target="#edit-{{electivePosition.id}}">
                                Editar
                            </button>
                        </section>
                    </div>
                </section>
            </div>
        </section>

        {{!-- Edit Modal --}}
        <div class="modal fade" id="edit-{{electivePosition.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Editar Posición Electiva</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form method="POST" action="/admin/editElectivePosition/{{electivePosition.id}}">
                        <div class="modal-body">
                            <section>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="Name" name="name" placeholder="Name" value="{{electivePosition.name}}">
                                    <label for="Name" class="col-form-label">Nombre del Partido</label>
                                </div>
                                <div class="form-group d-flex flex-column gap-2">
                                    <label for="Description">Description</label>
                                    <textarea class="form-control" name="description" rows="5" placeholder="Description"
                                        id="Description">{{electivePosition.description}}</textarea>
                                </div>
                            </section>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        {{!-- Edit Modal --}}

        <!-- Status Modal -->
        <div class="modal fade" id="status-{{electivePosition.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Cambiar Estado</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p class="">
                            ¿Seguro de que desea cambiar el estado de la posición <strong>{{electivePosition.name}}</strong>?
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <form method="POST" action="/admin/changeElectivePositionStatus/{{electivePosition.id}}">
                            {{#if electivePosition.status}}
                            <button type="submit" class="btn btn-danger">
                                Desactivar
                            </button>
                            {{else}}
                            <button type="submit" class="btn btn-primary">
                                Activar
                            </button>
                            {{/if}}
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Status Modal -->

    {{/each}}

    {{else}}

    {{#if hasError}}
    {{else}}
    <section class="col-6 bg-danger rounded-3 text-white text-center mx-auto p-4 mt-5">
        <h3 class="display-8 fw-normal text-uppercase fw-bolder m-0"> No hay registros de posiciones electivas </h3>
    </section>
    {{/if}}

    {{/if}}
</div>