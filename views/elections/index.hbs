<main class="m-4">
    <div class="row mx-auto">
        <div class="col-6">
            <h4>Elecciones</h4>
        </div>
        {{#if hasElectionActive}}
        {{else}}
        <div class="col-6 text-end">
                <a type="button" class="btn btn-primary btn-sm" href="#">
                Agregar eleccion
            </a>
        </di>        
        {{/if}}
    </div>
    <div class="row mt-3 ">
        <div class="col-12">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                    <th scope="col">Referencia</th>
					<th scope="col">Nombre</th>
                    <th scope="col">Fecha de realizacion</th>
                    <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each election as |item|}}
                    <tr>
                        <td>{{item.id}}</td>
						<td>{{item.name}}</td>
                        <td>{{item.dateRealization}}</td>                      
                        <td class="d-flex  gap-1">
                            {{#if item.status}}
                            <a href="/admin/election/{{item.id}}" class="btn btn-warning btn-sm">
                                Finalizar
                            </a>
                            {{else}}
                            <a href="/admin/election/{{item.id}}" class="btn btn-danger btn-sm">
                                Ver resultados
                            </a>
                            {{/if}}
                        </td>
                    </tr>     
                    {{/each}}                                              
                </tbody>
            </table>
        </div>
    </div>   
</main>