<main class="m-4">
  <div class="row mx-auto">
    <div class="col-6">
      <h4>Elecciones</h4>
    </div>
    {{#if hasElectionActive}}{{else}}
      <div class="col-6 text-end">
        <button
          type="buttton"
          class="btn btn-primary btn-sm"
          data-bs-toggle="modal"
          data-bs-target="#save"
        >
          Agregar eleccion
        </button>
      </div>
    {{/if}}
  </div>

  {{! Create Modal }}
  <div
    class="modal fade"
    id="save"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">
            Iniciar Elección
          </h1>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <form method="POST" action="/admin/createElection">
          <div class="modal-body">
            <section>
              <div class="form-floating my-3">
                <input
                  type="text"
                  class="form-control"
                  id="Name"
                  name="name"
                  placeholder="Name"
                />
                <label for="Name" class="col-form-label">Nombre de la elección</label>
              </div>

            </section>
            <section>
              <div class="form-floating my-3">
                <input
                  type="date"
                  class="form-control"
                  id="dateRealization"
                  name="dateRealization"
                  placeholder="dateRealization"
                />
                <label for="dateRealization" class="col-form-label">Fecha de
                  realización</label>
              </div>
            </section>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >Cerrar</button>
            <button type="submit" class="btn btn-primary">Crear</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  {{! Create Modal }}

  <div class="row mt-3">
    <div class="col-12">
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">Referencia</th>
            <th scope="col">Nombre</th>
            <th scope="col">Fecha de realizacion</th>
            <th scope="col">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each election as |item|}}
            <tr>
              <td>{{item.id}}</td>
              <td>{{item.name}}</td>
              <td>{{item.dateRealization}}</td>
              <td class="d-flex gap-1">
                {{#if item.status}}
                  <form
                    method="POST"
                    action="/admin/closedElection/{{item.id}}"
                  >
                    <button
                      type="submit"
                      class="btn btn-warning btn-sm"
                    >Finalizar</button>
                  </form>
                {{else}}
                  <a
                    href="/admin/election/{{item.id}}"
                    class="btn btn-danger btn-sm"
                  >
                    Ver resultados
                  </a>
                {{/if}}
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</main>