<main class="m-4">
  <div class="row mx-auto">
    {{#if hasElectionActive}}{{else}}
      <div class="col-12 mx-auto bg-primary rounded text-light text-center p-2">
        <h4>Resultados</h4>
      </div>
    {{/if}}
  </div>
  {{#if hasError}}
    <div class="col-12 mx-auto my-2">
      <div class="alert alert-danger text-center" role="alert">
        <strong>Error:</strong>
        {{errorMessage}}
      </div>
    </div>
  {{/if}}

  <div class="row mt-5">
    <div class="col-12">
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">Candidato</th>
            <th scope="col">Partido</th>
            <th scope="col">Posici√≥n Electiva</th>
            <th scope="col">Votos</th>
            <th scope="col">Porcentaje</th>
          </tr>
        </thead>
        <tbody>
          {{#each electivePosition as |item|}}
            {{#each ../resultElection as |result|}}
              {{#if (compare result.ElectivePositionId item.id)}}
              <tr>
                <td>{{result.fullName}}</td>
                <td>{{result.namePolitic}}</td>
                <td>{{result.nameElectivePosition}}</td>
                <td>{{result.votes}}</td>
                <td>{{result.porcentaje}}</td>
              </tr>
              {{/if}}
            {{/each}}
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  {{! <div class="col-12">
      <div class="col-12">
        <section
          class="col-6 bg-danger rounded-3 text-white text-center mx-auto p-4 mt-5"
        >
          <h3 class="display-8 fw-normal text-uppercase fw-bolder m-0">
            No se han encontrado resultados electivos
          </h3>
        </section>
      </div>
    </div> }}
</main>