<main class="m-4">
  <div class="row mx-auto">
    {{#if hasElectionActive}}{{else}}
      <div class="col-12">
        <button
          type="buttton"
          class="btn btn-primary w-100"
          data-bs-toggle="modal"
          data-bs-target="#save"
        >
          Resultados
        </button>
      </div>
    {{/if}}
  </div>
  {{#if hasError}}
    <div class="col-12 mx-auto my-2">
      <div class="alert alert-danger text-center" role="alert">
        <strong>Error:</strong>
        {{errorMessage}}
      </div>
    </div>
  {{/if}}

  {{#if hasElection}}
    <div class="row mt-3">
      <div class="col-12">
        <table class="table table-dark table-striped">
          <thead>
            <tr>
              <th scope="col">Referencia</th>
              <th scope="col">Elección</th>
              <th scope="col">Partido</th>
              <th scope="col">Posición Electiva</th>
              <th scope="col">Votos</th>
              <th scope="col">Porcentaje</th>
            </tr>
          </thead>
          <tbody>
            {{#each election as |item|}}
              <tr>
                <td>{{item.id}}</td>
                <td>{{item.name}}</td>
                <td>{{item.Politic.dataValues.name}}</td>
                <td>{{item.ElectivePosition.dataValues.name}}</td>
                <td>{{item.votes}}</td>
                <td>{{item.porcentaje}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  {{else}}
    <div class="col-12">
      <div class="col-12">
        <section
          class="col-6 bg-danger rounded-3 text-white text-center mx-auto p-4 mt-5"
        >
          <h3 class="display-8 fw-normal text-uppercase fw-bolder m-0">
            No se han encontrado resultados electivos
          </h3>
        </section>
      </div>
    </div>
  {{/if}}
</main>