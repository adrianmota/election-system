<div class="row">
    <div class="col-12 mx-auto my-5">    
        <button type="button" class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#save">
            Crear nuevo partido
        </button>
    </div>

    {{#if hasError}}
        <div class="col-6 mx-auto my-5">
            <div class="alert alert-danger text-center" role="alert">
                <strong>Error:</strong> {{errorMessage}}
                <a href="/admin/politics" class="btn btn-sm btn-primary">ver partidos</a>
            </div>
        </div>
    {{/if}}

    {{!-- Create Modal --}}
    <div class="modal fade" id="save" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">
                        Crear Nuevo partido
                    </h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form enctype="multipart/form-data" method="POST" action="/admin/createPolitic">
                    <div class="modal-body">
                        <section>
                            <div class="form-group d-flex flex-column gap-2">
                                <label for="LogoImg">Logo del Partido</label>
                                <input type="file" id="LogoImg" class="form-control" name="LogoImg" placeholder="LogoImg"
                                    required />
                            </div>
                            <div class="form-floating my-3">
                                <input type="text" class="form-control" id="Name" name="Name"
                                    placeholder="Name">
                                <label for="Name" class="col-form-label">Nombre del Partido</label>
                            </div>
                            <div class="form-group d-flex flex-column gap-2">
                                <label for="Description">Descripción</label>
                                <textarea class="form-control" name="Description" rows="5" placeholder="..."
                                    id="Description"></textarea>
                            </div>
                        </section>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    {{!-- Create Modal --}}
    

    {{#if hasPolitics}}
    
    {{#each politics as |politic|}}

    <section class="col-5 my-4 mx-auto">
        <div class="card text-white border-0 shadow">
            <section class="card-header bg-primary w-100 d-flex justify-content-center fw-bold text-uppercase">
                {{politic.name}}
            </section>
            <section class="card-body">
                <img src="{{politic.logoImg}}" class="card-img-top img-fluid img-cover" alt="politic">
            </section>
            <section class="card-footer p-2">
                <div class="d-flex flex-column gap-2">
                    <div class="accordion accordion-flush" id="accordionFlushExample">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="flush-headingOne">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#desc-{{politic.id}}" aria-expanded="false" aria-controls="flush-collapseOne">
                                    Descripción
                                </button>
                            </h2>
                            <div id="desc-{{politic.id}}" class="accordion-collapse collapse" aria-labelledby="flush-headingOne"
                                data-bs-parent="#accordionFlushExample">
                                <div class="accordion-body">{{politic.description}}</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex gap-2 p-2 mt-2 rounded w-100">
                    <section class="w-100">
                        {{#if politic.status}}
                            <button class="btn btn-danger w-100" data-bs-toggle="modal"
                                data-bs-target="#status-{{politic.id}}">Desactivar</button>
                        {{else}}
                            <button class="btn btn-success w-100" data-bs-toggle="modal"
                                data-bs-target="#status-{{politic.id}}">Activar</button>
                        {{/if}}
                    </section>
                    <section class="w-100">  
                        <button type="button" class="btn btn-secondary w-100" data-bs-toggle="modal" data-bs-target="#edit-{{politic.id}}">
                            Editar
                        </button>
                    </section>
                </div>
            </section>
        </div>
    </section>

                

    {{!-- Edit Modal --}}
    <div class="modal fade" id="edit-{{politic.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">
                        Editar Partido
                    </h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form enctype="multipart/form-data" method="POST" action="/admin/editPolitic/{{politic.id}}">
                    <div class="modal-body">
                        <section>
                            <div class="form-group d-flex flex-column gap-2 mb-3">
                                <label for="LogoImg">Image</label>
                                <input type="file" id="LogoImg" class="form-control" name="LogoImg" placeholder="LogoImg"
                                    value="{{politic.logoImg}}"/>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="Name" name="Name" 
                                    placeholder="Name" value="{{politic.name}}">
                                <label for="Name" class="col-form-label">Nombre del Partido</label>
                            </div>
                            <div class="form-group d-flex flex-column gap-2">
                                <label for="Description">Description</label>
                                <textarea class="form-control" name="Description" rows="5" placeholder="Description"
                                    id="Description">{{politic.description}}</textarea>
                            </div>
                        </section>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    {{!-- Edit Modal --}}

    <!-- Status Modal -->
    <div class="modal fade" id="status-{{politic.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Cambiar Estado</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="">
                        ¿Seguro de que desea cambiar el estado del partido <strong> {{politic.name}}</strong>?
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form method="POST" action="/admin/changePoliticStatus/{{politic.id}}">
                        {{#if politic.status}}
                        <button type="submit" class="btn btn-danger">
                            Desactivar
                        </button>
                        {{else}}
                        <button type="submit" class="btn btn-primary">
                            Activar
                        </button>
                        {{/if}}
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Status Modal -->

    {{/each}}

    {{else}}

    {{#if hasError}}
    {{else}}
    <section class="col-6 bg-danger rounded-3 text-white text-center mx-auto p-4 mt-5">
        <h3 class="display-8 fw-normal text-uppercase fw-bolder m-0"> No hay registros de partidos </h3>
    </section>
    {{/if}}

    {{/if}}
</div>