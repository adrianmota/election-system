<div class="container-fluid">
  <div class="row mt-4">
    <div class="col-9 mx-auto text-center">
      {{#if isAuthenticated}}
        <h2 class="text-dark">
          Bienvenido a la sección del administrador
        </h2>
      {{else}}

        <div class="row">
          <div class="col-md-12 mt-5">
            <div class="card col-md-6 shadow mx-auto">
              <div class="card-body">
                <h5 class="card-title text-center mb-4">Ingresar a la elección</h5>
                <form method="POST" action="/loginCitizen">
                  <div class="form-floating my-3">
                    <input
                      type="text"
                      class="form-control"
                      id="documentId"
                      name="documentId"
                      placeholder="documentId"
                    />
                    <label for="documentId" class="col-form-label">Documento de
                      identidad</label>
                  </div>
                  <div class="flex justify-content-between">
                    <button type="submit" class="w-100 btn btn-primary">
                      Ingresar
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>

      {{/if}}
      {{#if hasError}}
        <div class="col-6 mx-auto my-4">
          <div class="alert alert-danger text-center" role="alert">
            <strong>Error:</strong>
            {{errorMessage}}
          </div>
        </div>
      {{/if}}
    </div>
  </div>
</div>